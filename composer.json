{
    "name": "wacon/simplequiz",
    "type": "typo3-cms-extension",
    "description": "This extension provides a simple quiz with plugins and a backend module.",
    "authors": [
		{
            "name": "Philipp Kuhlmay",
            "role": "Former Developer"
        },
		{
            "name": "Kevin Chileong Lee",
            "role": "Developer",
            "email": "info@wacon.de",
            "homepage": "https://wacon.de/"
        }
	],
    "license": "GPL-2.0-or-later",
    "require": {
        "typo3/cms-core": "^12.4"
    },
    "require-dev": {
        "typo3/testing-framework": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Wacon\\Simplequiz\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wacon\\Simplequiz\\Tests\\": "Tests"
        }
    },
    "replace": {
        "typo3-ter/simplequiz": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
		"allow-plugins": {
			"typo3/class-alias-loader": true
		}
    },
    "scripts": {
        "post-autoload-dump": [
            "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
        ]
    },
    "extra": {
        "typo3/cms": {
            "web-dir": ".Build/public",
            "extension-key": "simplequiz"
        }
    }
}
